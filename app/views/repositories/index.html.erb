<div class="content-heading">Repositories</div>
<div class="table-responsive b0">
   <table id="datatable1" class="table table-striped table-hover">
      <thead>
         <tr>
            <th>
               <strong>Product Name</strong>
            </th>
            <th>
               <strong>Number</strong>
            </th>
            <th class="text-center">
               <strong>Waiting</strong>
            </th>
            <th class="text-center">
               <strong>Need To Buy More</strong>
            </th>
         </tr>
      </thead>
      <tbody>
          <% @repositories.each_with_index do |repository, index| %>
            <tr>
               <td><%= repository.product.name %></td>
               <td><%= repository.number %></td>
               <td class="text-center">
                  <span class="label label-info"><%= repository.waiting %></span>
               </td>
               <td class="text-center">
                  <span class="label label-danger"><%= repository.waiting - repository.number if repository.waiting > repository.number %></span>
               </td>
            </tr>
          <% end %>
      </tbody>
   </table>
</div>
