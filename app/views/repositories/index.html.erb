<div class="content-heading">Repositories</div>

<form class="panel">
   <div role="tabpanel">
      <ul class="nav nav-tabs nav-justified">
         <li role="presentation" class="active"><a href="#repository_in_usa" aria-controls="repository_in_usa" role="tab" data-toggle="tab">Repository In Usa</a>
         </li>
         <li role="presentation"><a href="#repository_on_the_way" aria-controls="repository_on_the_way" role="tab" data-toggle="tab">On The Way</a>
         </li>
         <li role="presentation"><a href="#repository_in_viet_nam" aria-controls="repository_in_viet_nam" role="tab" data-toggle="tab">Repository In Viet Nam</a>
         </li>
      </ul>
      <div class="tab-content">
          <div id="repository_in_usa" role="tabpanel" class="tab-pane active">
            <div class="table-responsive b0">
              <table id="datatable_repository_in_usa" class="table table-striped table-hover">
                 <thead>
                    <tr>
                       <th>
                          <strong>Product Name</strong>
                       </th>
                       <th>
                          <strong>Quantity</strong>
                       </th>
                       <th class="text-center">
                          <strong>Waiting</strong>
                       </th>
                       <th class="text-center">
                          <strong>Need To Buy More</strong>
                       </th>
                    </tr>
                 </thead>
                 <tbody>
                     <% @remote_repositories.each_with_index do |repository, index| %>
                       <tr>
                          <td><%= repository.product.name %></td>
                          <td><%= repository.quantity %></td>
                          <td class="text-center">
                             <span class="label label-info"><%= repository.waiting %></span>
                          </td>
                          <td class="text-center">
                             <span class="label label-danger"><%= repository.waiting - repository.quantity if repository.waiting > repository.quantity %></span>
                          </td>
                       </tr>
                     <% end %>
                 </tbody>
              </table>
            </div>
         </div>
         <div id="repository_on_the_way" role="tabpanel" class="tab-pane">
            <div class="table-responsive b0">
              <table id="datatable_repository_on_the_way" class="table table-striped table-hover">
                <thead>
                   <tr>
                      <th>
                         <strong>Product Name</strong>
                      </th>
                      <th>
                         <strong>Quantity</strong>
                      </th>
                   </tr>
                </thead>
                <tbody>
                    <% @on_the_way_repositories.each_with_index do |repository, index| %>
                      <tr>
                         <td><%= repository.product.name %></td>
                         <td><%= repository.quantity %></td>
                      </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
          </div>
         <div id="repository_in_viet_nam" role="tabpanel" class="tab-pane">

           <div class="table-responsive b0">
             <table id="datatable_repository_in_viet_nam" class="table table-striped table-hover">
               <thead>
                  <tr>
                     <th>
                        <strong>Product Name</strong>
                     </th>
                     <th>
                        <strong>Quantity</strong>
                     </th>
                  </tr>
               </thead>
               <tbody>
                   <% @local_repositories.each_with_index do |repository, index| %>
                     <tr>
                        <td><%= repository.product.name %></td>
                        <td><%= repository.quantity %></td>
                     </tr>
                   <% end %>
               </tbody>
             </table>
           </div>

         </div>
      </div>
   </div>
</form>
