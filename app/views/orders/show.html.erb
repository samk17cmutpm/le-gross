<div class="content-heading"><%= "Order # #{@order.code}" %></div>
<div class="panel panel-default">
   <div class="panel-heading">Order Information</div>
   <div class="panel-body">
      <div class="row">
         <div class="col-md-6">
            <p class="lead bb">Details</p>
            <form class="form-horizontal p-20">
               <div class="form-group">
                  <div class="col-sm-4">Order ID:</div>
                  <div class="col-sm-8">
                     <strong><%= @order.code %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Purchased On:</div>
                  <div class="col-sm-8">
                     <strong><%= @order.date %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Client Name:</div>
                  <div class="col-sm-8">
                     <strong><%= "#{@customer.first_name} #{@customer.last_name}" %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Paid Amount:</div>
                  <div class="col-sm-8">
                     <strong><%= @order.paid_amount %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Total Price:</div>
                  <div class="col-sm-8">
                     <strong><%= @order.total_price %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Shipment Status:</div>
                  <div class="col-sm-8">
                     <strong>________</strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Status</div>
                  <div class="col-sm-8">
                     <div class="label label-info"><%= @order.status %></div>
                  </div>
               </div>
            </form>
         </div>
         <div class="col-md-6">
            <p class="lead bb">Client</p>
            <form class="form-horizontal p-20">
               <div class="form-group">
                  <div class="col-sm-4">Name:</div>
                  <div class="col-sm-8">
                     <strong><%= "#{@customer.first_name} #{@customer.last_name}" %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Email:</div>
                  <div class="col-sm-8">
                     <strong><%= @customer.email %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Address:</div>
                  <div class="col-sm-8">
                     <strong><%= @customer.address %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Phone:</div>
                  <div class="col-sm-8">
                     <strong><%= @customer.phone_number %></strong>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-4">Status</div>
                  <div class="col-sm-8">
                     <div class="label label-success">Active</div>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<div class="panel">
   <div class="panel-heading">Products in order</div>
   <div class="table-responsive">
      <table class="table table-hover table-bordered table-striped">
         <thead>
            <tr>
               <th>Product Name</th>
               <th>Price</th>
               <th>Quantity</th>
               <th>Total</th>
            </tr>
         </thead>
         <tbody>
            <% @order_items.each_with_index do |order_item| %>
              <tr>
                 <td>
                   <a href=""><%= order_item.product.name %></a>
                 </td>
                 <td><%="$ #{order_item.price}" %></td>
                 <td><%= order_item.quantity %></td>
                 <td><%="$ #{order_item.price * order_item.quantity}" %></td>
              </tr>
            <% end %>
         </tbody>
      </table>
   </div>
</div>
