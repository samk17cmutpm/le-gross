<div class="content-heading">
    <%= link_to '<em class="fa fa-plus-circle fa-fw mr-sm"></em> Add New Pack'.html_safe, packs_new_path, :class => "btn btn-primary pull-right" %>
    Packs
</div>
<div class="table-responsive b0">
   <table id="datatable1" class="table table-striped table-hover">
      <thead>
         <tr>
            <th>
               <strong>Code</strong>
            </th>
            <th>
               <strong>Packaged On</strong>
            </th>
            <th>
               <strong>Note</strong>
            </th>
            <th>
               <strong>Shipment By</strong>
            </th>
            <th>
               <strong>Status</strong>
            </th>
            <th class="text-center">
               <strong>Action</strong>
            </th>
         </tr>
      </thead>
      <tbody>
          <% @packs.each_with_index do |pack, index| %>
            <tr>
               <td><%= pack.code %></td>
               <td><%= pack.date %></td>
               <td><%= pack.note %></td>
               <td><%= pack.shipment_by %></td>
               <td>
                  <% case pack.status
                       when "Finished" %><span class="label label-success"><%= pack.status %></span>
                    <% when "On The Way" %><span class="label label-danger"><%= pack.status %></span>
                  <% end %>
               </td>
               <td class="text-center">
                  <%= link_to 'Finished', controller: "packs", action: "finished", id: pack.id if pack.status != "Finished"%>
                  <%= link_to 'View', controller: "packs", action: "show", id: pack.id %>
               </td>
            </tr>
          <% end %>
      </tbody>
   </table>
</div>
