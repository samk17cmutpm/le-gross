<h3>Edit The Product
   <small>Edit The Product</small>
</h3>
<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
           <div class="panel-heading">Product form</div>
           <div class="panel-body">
              <form role="form" method="post" action="update">
                 <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" placeholder="Enter Name Of The Product" value="<%= @product.name %>" class="form-control" name="product_name"/>
                 </div>
                 <button type="submit" name="product_id" value="<%= @product.id %>" class="btn btn-sm btn-default">Update The Product</button>
              </form>
           </div>
    </div>
  </div>
</div>
