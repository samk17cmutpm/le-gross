<div class="row">
    <form method="post" action="create" novalidate="novalidate">
      <div class="col-md-3">
          <div class="panel b">
            <div class="panel-heading bb">
               <h4 class="panel-title">Please Select The Status Of Pack</h4>
            </div>
            <div class="panel-body bt">
              <select id="status_list" class="form-control" name="status">
                   <% @statuses.each do |status| %>
                     <option class="form-control" value="<%= status %>"><%= status %></option>
                   <% end %>
               </select>
            </div>
          </div>
      </div>
      <div class="col-md-9">
        <div class="container-md">
           <!-- Checkout Process-->
              <div id="accordion" class="panel-group">
                 <div class="panel b">
                    <div class="panel-heading">
                       <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#acc1collapse6">Please Select The Product</a>
                       </h4>
                    </div>
                    <div id="acc1collapse6" class="panel-collapse collapse in">
                       <div id="collapse06" class="panel-body">
                          <div class="table-responsive">
                             <table class="table">
                                <colgroup>
                                   <col span="1" class="order-qty" />
                                   <col span="1" class="order-qty" />
                                </colgroup>
                                <thead class="bg-gray-lighter">
                                   <tr>
                                      <th class="wd-xl">Product Name</th>
                                      <th class="wd-xl">Quantity</th>
                                      <th></th>
                                   </tr>
                                </thead>
                                <tfoot>
                                  <tr>
                                    <td colspan="2"></td>
                                    <td colspan="1" >
                                      <button type="button" class="btn btn-sm btn-success" id="add_new_product">
                                        <em class="fa fa-plus-circle"></em>
                                      </button>
                                    </td>
                                  </tr>
                                </tfoot>
                                <tbody class="input_fields_wrap">
                                  <tr>
                                      <td class="order-item-content">
                                        <select id="products_list_0" class="form-control wd-xl" name="product_id_0" >
                                          <% @products.each do |product| %>
                                             <option class="form-control" value="<%= product.id %>"><%= product.name %></option>
                                          <% end %>
                                        </select>
                                      </td>
                                      <td class="order-qty">
                                        <input type="number" name="quantity_of_the_product_0" value="1" min="1" step="1" class="form-control" />
                                      </td>
                                      <td class="order-total">
                                        <button type="button" id="remove_the_product_0" class="btn btn-sm btn-danger">
                                          <em class="fa fa-trash"></em>
                                        </button>
                                      </td>
                                  </tr>
                                </tbody>
                             </table>
                          </div>
                          <div class="mt-lg">
                             <button id="submit" type="submit" name="ids_of_element"  class="btn btn-info">Create New Pack</button>
                          </div>
                       </div>
                    </div>
                 </div>
              </div>
        </div>
      </div>
   </form>
</div>
