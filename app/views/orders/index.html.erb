<div class="content-heading">
    <%= link_to '<em class="fa fa-plus-circle fa-fw mr-sm"></em> Add New Order From Customer'.html_safe, orders_new_path, :class => "btn btn-primary pull-right" %>
    Orders From Customers
</div>
<div class="table-responsive b0">
   <table id="datatable1" class="table table-striped table-hover">
      <thead>
         <tr>
            <th style="width:80px">
               <strong>ORDER ID</strong>
            </th>
            <th>
               <strong>PURCHASED ON</strong>
            </th>
            <th>
               <strong>CLIENT NAME</strong>
            </th>
            <th>
               <strong>PAID AMOUNT</strong>
            </th>
            <th>
               <strong>SHIPMENT</strong>
            </th>
            <th class="text-center">
               <strong>STATUS</strong>
            </th>
            <th class="text-center">
               <strong>Action</strong>
            </th>
         </tr>
      </thead>
      <tbody>
          <% @orders.each_with_index do |order, index| %>
            <tr>
               <td><%= order.id %></td>
               <td><%= order.date %></td>
               <td>
                 <%= link_to "#{order.customer.first_name} #{order.customer.last_name}", controller: "customers", action: "edit", id: order.customer.id %>
               </td>
               <td><%= order.paid_amount %></td>
               <td>____</td>
               <td class="text-center">
                  <span class="label label-info"><%= order.status %></span>
               </td>
               <td class="text-center">
                 <%= link_to 'View', controller: "orders", action: "show", id: order.id %>
               </td>
            </tr>
          <% end %>
      </tbody>
   </table>
</div>
